{
  "extends": ["react-app"],
  "env": {
    "browser": true,
    "node": true,
    "serviceworker": true,
    "es2021": true
  },
  "globals": {
    "DOMPurify": "readonly",
    "marked": "readonly",
    "FullCalendar": "readonly"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off"
  },
  "ignorePatterns": [
    "build/",
    "dist/",
    "node_modules/",
    "coverage/",
    "*.config.js"
  ]
