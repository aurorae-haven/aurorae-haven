{
  "defaults": {
    "concurrency": 2,
    "standard": "WCAG2AAA",
    "timeout": 30000,
    "wait": 500,
    "chromeLaunchConfig": {
      "executablePath": "/usr/bin/google-chrome-stable",
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--disable-dev-shm-usage"
      ]
    },
    "headers": {
      "Accept-Language": "en-GB"
    }
  },
  "urls": ["http://localhost:8080/"],
  "threshold": {
    "error": 0,
    "warning": 10,
    "notice": 50
  },
  "hideElements": ["[aria-live='polite']", "[aria-live='assertive']"]
}
