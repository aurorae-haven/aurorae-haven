{
  "name": "my-stellar-trail",
  "version": "1.0.0",
  "description": "> **A calm, astro-themed productivity app designed for neurodivergent users.**   > Manage routines, tasks, habits, notes, and stats with Markdown import/export, reminders, gamification, and secure local/mobile use.",
  "homepage": "/my-stellar-trail",
  "main": "src/index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "react-scripts start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "build": "react-scripts build && npm run prepare-dist",
    "prepare-dist": "rm -rf dist && cp -r build dist",
    "validate-pwa": "node scripts/validate-pwa.js"
  },
  "dependencies": {
    "dompurify": "^3.2.7",
    "express": "^4.18.2",
    "marked": "^16.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.3",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "cross-env": "^7.0.3",
    "pa11y-ci": "^3.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.4.31"
  },
  "standard": {
    "env": [
      "browser",
      "node",
      "serviceworker"
    ],
    "globals": [
      "React",
      "ReactDOM",
      "DOMPurify",
      "marked",
      "FullCalendar"
    ],
    "ignore": [
      "node_modules/",
      "build/",
      "dist/"
    ],
    "rules": {
      "space-before-function-paren": "off"
    }
  }
}
