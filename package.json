{
  "name": "aurorae-haven",
  "version": "1.0.0",
  "description": "> **A calm, astro-themed productivity app designed for neurodivergent users.**   > Manage routines, tasks, habits, notes, and stats with Markdown import/export, reminders, gamification, and secure local/mobile use.",
  "homepage": "/aurorae-haven",
  "main": "src/index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "react-scripts start",
    "test": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:md": "markdownlint '**/*.md' -i node_modules",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "react-scripts build && npm run prepare-dist",
    "prepare-dist": "bash scripts/prepare-dist.sh",
    "validate-pwa": "node scripts/validate-pwa.js"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.15",
    "@fullcalendar/daygrid": "^6.1.15",
    "dompurify": "^3.2.7",
    "express": "^4.18.2",
    "marked": "^16.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.37.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "ajv": "^8.17.1",
    "babel-jest": "^30.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "jest": "^27.5.1",
    "markdownlint-cli": "^0.43.0",
    "prettier": "^3.6.2",
    "react-scripts": "^5.0.1",
    "stylelint": "^16.25.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.4.31",
    "typescript": "^5.9.3"
  },
  "standard": {
    "env": [],
    "globals": [],
    "ignore": [
      "node_modules/",
      "build/",
      "dist/"
    ],
    "rules": {
      "space-before-function-paren": "off"
    }
  }
}
